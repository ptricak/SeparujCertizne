<!-- rental-section -->
<section class="rental-section">
    <div class="container">
        <div class="upper-title">
            <div class="block-title">
                <p><span>Vývoz separovaných zložiek odpadu</span></p>
                <h2>Prehľad najbližších vývozov odpadu</h2>
            </div><!-- /.block-title -->
        </div>
        <div class="row">

            @foreach (var separationTerm in Model.SeparationTerms)
            {
        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 pt-sm-5 single-column">
            <div class="single-item wow fadeInUp animated animated" style="height:100%;" data-wow-delay="00ms" data-wow-duration="1500ms">
                <div class="inner-box" style="background-color: @separationTerm.GarbageTypeColor;">
                    <div>
                        <h3>@Html.Raw(separationTerm.GarbageTypeString)</h3>
                    </div>
                    <figure class="image-box"><img src="assets/images/resources/rental-4.png" alt=""></figure>
                    <span class="sizes"><b>Čas:</b> 07:00 - 10:00</span>
                    <h5><b>Dátum:</b> @separationTerm.GarbagePickingDate.ToString("dd.MM.yyyy")</h5>
                </div>
            </div>
        </div>
            }

        </div>
    </div>
</section>
<!-- rental-section end -->

